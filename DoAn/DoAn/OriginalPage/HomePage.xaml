<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.OriginalPage.HomePage"
             xmlns:viewTaskpage="clr-namespace:DoAn.OriginalPage.Taskpage"
             xmlns:viewCalendar="clr-namespace:DoAn.OriginalPage.Calendar"
             xmlns:viewBookings="clr-namespace:DoAn.OriginalPage.Booking"
             xmlns:tipsView="clr-namespace:DoAn.OriginalPage.Tips"
             xmlns:schedulerView="clr-namespace:DoAn.OriginalPage.Scheduler"
             xmlns:user="clr-namespace:DoAn.OriginalPage.User"
             NavigationPage.HasNavigationBar="False"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             SelectedTabColor="Black"
             UnselectedTabColor="#4B56D2"
             BarBackgroundColor="#EEF1FF"
             >
   
    <viewTaskpage:TaskPage Title="Tasks" IconImageSource="task"/>
    <viewCalendar:CalendarPage Title="Calendar" IconImageSource="calendar" />
    <schedulerView:SchedulerPage Title="Scheduler" IconImageSource="scheduler" />
    <tipsView:TipPage Title="Tips" IconImageSource="advice" />
    <viewBookings:BookingPage Title="Booking" IconImageSource="booking" />
    <user:Profile Title="Profile" IconImageSource="user"/>

</TabbedPage>