<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.MainPage"
             BackgroundColor="#e7e6e6">

    <StackLayout Orientation="Vertical" 
                 VerticalOptions="Center">
        <Image Source="firstScreen.jpg" 
        ></Image>
        <Label Text="Manage your task"
        HorizontalOptions="Center"
        FontSize="25"
         Margin="20"
        TextColor="Black"></Label>
        <Label Text="Organzie, plan, and collaborate your tasks.Your busy life deserves this you can manage checklist and your goal"
         HorizontalOptions="Center"
         Margin="30"
         Padding="10"
         FontSize="17"></Label>
        <Button Text="Get Started" Margin="60" 
        Padding="20"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="Center"
        BackgroundColor="#0e345b"
        BorderWidth="2"
        CornerRadius="90"
        WidthRequest="400"
        HeightRequest="100"
        FontSize="Large"
        TextColor="White"></Button>
    </StackLayout>

</ContentPage>
