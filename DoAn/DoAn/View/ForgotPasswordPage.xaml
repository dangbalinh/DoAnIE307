<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.View.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="Center"
                     >
            <Label Text="Forgot Password"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="Title"
                   TextColor="Black"
                   FontAttributes="Bold"/>
            <Image Source="todolista.png"/>
            <Entry Placeholder="Enter your email"
                   x:Name="TxtEmail" Keyboard="Email"/>
            <Button Text="Send Link"
                    x:Name="ButtonSendLink"
                    CornerRadius="30"
                    HorizontalOptions="Center"
                    Background="#AAC4FF"
                    Clicked="ButtonSendLink_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>