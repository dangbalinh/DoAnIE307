<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn.View.ChangePassword">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Change Password"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Entry Placeholder="Current password" x:Name="txtCurPassword" IsPassword="True"/>
            <Entry Placeholder="New password" x:Name="TxtPassword" IsPassword="True"/>
            <Entry Placeholder="Confirm password" x:Name="TxtConfirm" IsPassword="True"/>
            <Button Text="Change Password" x:Name="BtnChangePassword"
                    Clicked="BtnChangePassword_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>